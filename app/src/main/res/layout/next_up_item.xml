<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:orientation="horizontal">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_nextup_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/image_nextup_cover"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_nextup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To thich cau - Hansara"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/text_nextup_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hansara" />
    </LinearLayout>

    <ImageView
        android:id="@+id/next_up_actions"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ellipsis_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>